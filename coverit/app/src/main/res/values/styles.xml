<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextAppStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="AppBarTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="imageNavButton">
        <item name="android:layout_width">@dimen/imageButtonSize</item>
        <item name="android:layout_height">@dimen/imageButtonSize</item>
        <item name="android:background">@drawable/custom_imageview_button</item>
    </style>
</resources>