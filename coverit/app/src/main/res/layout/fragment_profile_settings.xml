<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_home"
    tools:context=".ui.views.domain.ProfileSettingsFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fr_profile_settings_avatar"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/antee_logo_purple"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="88dp" />

    <ImageView
        android:id="@+id/fr_profile_settings_btn_back"
        android:layout_width="@dimen/imageButtonSize"
        android:layout_height="@dimen/imageButtonSize"
        android:background="@drawable/custom_imageview_button"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <EditText
        android:id="@+id/fr_profile_settings_et_name"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:inputType="text"
        android:text="@string/name"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/fr_profile_settings_avatar"
        android:hint="@string/name"
        style="@style/editTextAppStyle" />

    <EditText
        android:id="@+id/fr_profile_settings_et_age"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:text="@string/age"
        android:drawableLeft="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/fr_profile_settings_et_name"
        android:hint="@string/age"
        style="@style/editTextAppStyle" />

    <EditText
        android:id="@+id/fr_profile_settings_et_sex"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:text="@string/sex"
        android:drawableLeft="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/fr_profile_settings_et_age"
        android:hint="@string/sex"
        style="@style/editTextAppStyle" />

    <EditText
        android:id="@+id/fr_profile_settings_et_role"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:text="@string/role"
        android:drawableLeft="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/fr_profile_settings_et_sex"
        android:hint="@string/role"
        style="@style/editTextAppStyle" />

    <EditText
        android:id="@+id/fr_profile_settings_et_about"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:text="@string/about"
        android:drawableLeft="@drawable/chat"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/fr_profile_settings_et_role"
        android:hint="@string/about"
        style="@style/editTextAppStyle" />

    <ImageView
        android:id="@+id/fr_profile_settings_btn_change_photo"
        android:layout_width="@dimen/imageButtonSize"
        android:layout_height="@dimen/imageButtonSize"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <Button
        android:id="@+id/fr_profile_settings_btn_update"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Update"
        android:backgroundTint="@color/gray_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/fr_profile_settings_et_about" />

    <TextView
        android:id="@+id/textView2"
        style="@style/AppBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Settings"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />
</androidx.constraintlayout.widget.ConstraintLayout>