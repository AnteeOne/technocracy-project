<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/swipe_card_item"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:background="@color/transparent"
        app:cardCornerRadius="24dp"
        app:cardElevation="24dp"
        app:cardMaxElevation="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/swipecard_gradient">

            <TextView
                android:id="@+id/swipe_card_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.882" />

            <ImageView
                android:id="@+id/swipe_card_item_avatar"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/swipe_card_item_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/role"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="@+id/swipe_card_item_title"
                app:layout_constraintStart_toStartOf="@+id/swipe_card_item_title"
                app:layout_constraintTop_toBottomOf="@+id/swipe_card_item_title" />

            <Button
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:text="@string/details"
                android:textColor="@color/white"
                android:fontFamily="@font/comfortaa_bold"
                android:textSize="10sp"
                android:background="@drawable/custom_details_button"
                app:layout_constraintBottom_toBottomOf="@+id/swipe_card_item_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/swipe_card_item_avatar"
                app:layout_constraintTop_toBottomOf="@+id/swipe_card_item_avatar"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="128dp" />


</androidx.constraintlayout.widget.ConstraintLayout>